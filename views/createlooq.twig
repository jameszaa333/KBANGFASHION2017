{% extends 'layout/baseanimate.twig' %}

{% block title %} <title>Create LOOQ</title> {% endblock %}

{% block stylesheet %} {% endblock %}

{% block style %}

  <style>
        .model { position: relative; }
        .model .skin {
          position: absolute;
          top: 0;
          left: 0;
          z-index: 3;
        }
        .model .shadow {
          position: absolute;
          top: 0;
          left: 0;
          z-index: 2;
        }                
        .img-container .modelbg {
          position: absolute;
          top: 0;
          left: 0;
          z-index: 1;
        }
        .coloricon a:hover {
          cursor: pointer;
        }
        .coloricon img {
          width: 30px;
          border-radius: 100%;
          -webkit-box-shadow: 5px 5px 5px #ccc;
          -moz-box-shadow: 5px 5px 5px #ccc;
          box-shadow: 5px 5px 5px #ccc;

          -webkit-transition:0.7s;
          -moz-transition:0.7s;
          -o-transition:0.7s;

          filter: alpha(opacity=100);
          opacity:1.0;
        }
        .coloricon img:hover {
          filter: alpha(opacity=70);
          opacity:.8;
        }
        .button {
          border: solid 1px #999;

          -webkit-transition:0.7s;
          -moz-transition:0.7s;
          -o-transition:0.7s;

          filter: alpha(opacity=100);
          opacity:1.0;

          -webkit-transition: all 0.5s ease;
          -moz-transition: all 0.5s ease;
          -o-transition: all 0.5s ease;
        }
        .button:hover {
          filter: alpha(opacity=70);
          opacity:.8;

          -webkit-transition: all 0.5s ease;
          -moz-transition: all 0.5s ease;
          -o-transition: all 0.5s ease;
          box-shadow: 0.1em 0.1em 0.2em #999;
          text-shadow: none;
        }
  </style>

{% endblock %}


{% block content %}

    <div class="topic" style="padding-top: 85px; width: 100%;">
      <p class="model color" style="font-family: Chonburi; font-size: 30px; color: #464646; padding-left: 6%">CREATE LOOQ</p>
      <p class="model color" style="font-family: Chonburi; font-size: 20px; color: #976f6c; padding-left: 18%">COLOR</p>
    </div>
    <div class="model" style="width: 20%; height: 320px; text-align: center; margin: -20px auto auto auto;min-width: 170px ">
      <img id="model skin" class="skin" style="width: 100%; max-height: 632px; max-width: 311px;" src="/assets/images/model/modelN0.png" alt="Create Model">
      <img id="model shadow" class="shadow" style="width: 100%; max-height: 632px; max-width: 311px;" src="assets/images/model/shadow1.png" alt="Shadow Model">
    </div>

    <!--color button-->
    <div style="width: 100%; margin-top: 290px; display: flex;">
      <div style="width: 45%; text-align: right; font-family: Chonburi; font-size: 18px; color: #976f6c; margin-right: 1%">SKIN COLOR :</div>
      <div class="coloricon" style="width: 55%; text-align: left; margin-left: 1%">
          <a onclick="document.getElementById('model skin').src='assets/images/model/modelN0.png'"><img src="assets/images/model/N0.png"></a>
          <a onclick="document.getElementById('model skin').src='assets/images/model/modelN1.png'"><img src="assets/images/model/N1.png"></a>
          <a onclick="document.getElementById('model skin').src='assets/images/model/modelN2.png'"><img src="assets/images/model/N2.png"></a>
          <a onclick="document.getElementById('model skin').src='assets/images/model/modelN3.png'"><img src="assets/images/model/N3.png"></a>
          <a onclick="document.getElementById('model skin').src='assets/images/model/modelN4.png'"><img src="assets/images/model/N4.png"></a>
      </div>
    </div>

    <div class="column has-text-centered" style="margin-bottom: 1.5%; margin-top: 1%">   
      <a class="button is-light" href="design-looq" style="color: #ffffff; width: 90px; background-color: #e7c6c2;margin-bottom: 166px">NEXT</a>
    </div>

{% endblock %}